{
  "$schema": "node_modules/wrangler/config-schema.json",
  "account_id": "ab2ac8ca4000c79ae4a66377276585be",
  "name": "esolia-standards-mcp",
  "main": "src/index.ts",
  "compatibility_date": "2025-04-01",
  "compatibility_flags": ["nodejs_compat"],

  // R2 bucket for standards documents (same codex bucket used by Hanawa)
  // Create with: npx wrangler r2 bucket create codex
  // Standards are stored at standards/{slug}.md within the bucket
  "r2_buckets": [
    {
      "binding": "STANDARDS_R2",
      "bucket_name": "codex"
    }
  ],

  // Durable Objects for MCP agent state (SQLite-backed, required by agents SDK)
  "durable_objects": {
    "bindings": [
      {
        "name": "MCP_OBJECT",
        "class_name": "EsoliaStandardsMCPv2"
      }
    ]
  },

  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["EsoliaStandardsMCP"]
    },
    {
      "tag": "v2",
      "new_sqlite_classes": ["EsoliaStandardsMCPv2"]
    }
  ],

  // Optional: restrict access with a shared secret
  // Set via: npx wrangler secret put SHARED_SECRET
  // Then in Claude Code config, pass as Bearer token header

  "observability": {
    "enabled": true,
    "logs": {
      "enabled": true,
      "invocation_logs": true,
      "head_sampling_rate": 1
    },
    "traces": {
      "enabled": true,
      "head_sampling_rate": 1
    }
  }
}
