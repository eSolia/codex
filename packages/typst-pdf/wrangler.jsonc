{
  "$schema": "node_modules/wrangler/config-schema.json",
  "account_id": "ab2ac8ca4000c79ae4a66377276585be",
  "name": "typst-pdf",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-01",
  "compatibility_flags": ["nodejs_compat"],

  // Cloudflare Container for pandoc + typst
  "containers": [
    {
      "class_name": "TypstPdfContainer",
      "image": "./container",
      "instance_type": "standard-1",
      "max_instances": 3
    }
  ],

  // Durable Object binding to the container
  "durable_objects": {
    "bindings": [
      {
        "name": "TYPST_CONTAINER",
        "class_name": "TypstPdfContainer"
      }
    ]
  },

  // Observability
  "observability": {
    "enabled": true,
    "logs": {
      "enabled": true,
      "invocation_logs": true,
      "head_sampling_rate": 1
    },
    "traces": {
      "enabled": true,
      "head_sampling_rate": 1
    }
  },

  // Migrations for Durable Object
  "migrations": [
    {
      "tag": "v1",
      "new_classes": ["TypstPdfContainer"]
    }
  ]
}
