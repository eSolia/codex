{
  "name": "hanawa-cms",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "wrangler pages deploy",
    "cf-typegen": "wrangler types",
    "db:migrate": "wrangler d1 migrations apply hanawa-db",
    "db:migrate:local": "wrangler d1 migrations apply hanawa-db --local",
    "version:bump": "./scripts/bump-version.sh",
    "version:check": "echo \"package.json: $(node -p \"require('./package.json').version\")\" && echo \"wrangler.jsonc: $(grep APP_VERSION wrangler.jsonc | sed 's/.*: \"\\(.*\\)\".*/\\1/')\""
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@tiptap/core": "^2.10.4",
    "@tiptap/extension-placeholder": "^2.10.4",
    "@tiptap/pm": "^2.10.4",
    "@tiptap/starter-kit": "^2.10.4",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@tiptap/extension-highlight": "^2.27.1",
    "@tiptap/extension-image": "^2.27.1",
    "@tiptap/extension-link": "^2.27.1",
    "@tiptap/extension-table": "^2.27.1",
    "@tiptap/extension-table-cell": "^2.27.1",
    "@tiptap/extension-table-header": "^2.27.1",
    "@tiptap/extension-table-row": "^2.27.1",
    "@tiptap/extension-task-item": "^2.27.1",
    "@tiptap/extension-task-list": "^2.27.1",
    "@tiptap/extension-underline": "^2.27.1",
    "@tiptap/suggestion": "^3.14.0",
    "@types/marked": "^5.0.2",
    "bits-ui": "^1.0.0-next.98",
    "date-fns": "^4.1.0",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "phosphor-svelte": "^3.0.1",
    "tippy.js": "^6.3.7",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  }
}
