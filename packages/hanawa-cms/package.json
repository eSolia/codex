{
  "name": "hanawa-cms",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "overrides": {
      "cookie": "^0.7.0",
      "undici": "^7.18.2",
      "lodash-es": "^4.17.23",
      "ajv": "^6.14.0"
    }
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "cd ../.. && husky packages/hanawa-cms/.husky || true",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "oxlint --config .oxlintrc.json && eslint .",
    "lint:fix": "oxlint --fix --config .oxlintrc.json && eslint --fix .",
    "test:unit": "vitest run",
    "verify": "pnpm run lint && pnpm run check && pnpm run test:unit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "pnpm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "db:migrate": "wrangler d1 migrations apply hanawa-db",
    "db:migrate:local": "wrangler d1 migrations apply hanawa-db --local",
    "version:bump": "./scripts/bump-version.sh",
    "version:check": "echo \"package.json: $(node -p \"require('./package.json').version\")\" && echo \"wrangler.jsonc: $(grep APP_VERSION wrangler.jsonc | sed 's/.*: \"\\(.*\\)\".*/\\1/')\"",
    "diagram:backup": "npx tsx scripts/export-diagram-yaml.ts",
    "diagram:backup:all": "npx tsx scripts/export-diagram-yaml.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260305.0",
    "@eslint/js": "^9.39.3",
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@tiptap/core": "^2.10.4",
    "@tiptap/extension-placeholder": "^2.10.4",
    "@tiptap/pm": "^2.10.4",
    "@tiptap/starter-kit": "^2.10.4",
    "eslint": "^9.39.3",
    "eslint-plugin-oxlint": "^1.46.0",
    "eslint-plugin-svelte": "^2.46.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.47.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.53.0",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.19.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.18",
    "wrangler": "^4.67.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@tiptap/extension-highlight": "^2.27.1",
    "@tiptap/extension-image": "^2.27.1",
    "@tiptap/extension-link": "^2.27.1",
    "@tiptap/extension-table": "^2.27.1",
    "@tiptap/extension-table-cell": "^2.27.1",
    "@tiptap/extension-table-header": "^2.27.1",
    "@tiptap/extension-table-row": "^2.27.1",
    "@tiptap/extension-task-item": "^2.27.1",
    "@tiptap/extension-task-list": "^2.27.1",
    "@tiptap/extension-underline": "^2.27.1",
    "@tiptap/suggestion": "^2.11.0",
    "@types/marked": "^5.0.2",
    "beautiful-mermaid": "^0.1.3",
    "bits-ui": "^1.0.0-next.98",
    "date-fns": "^4.1.0",
    "marked": "^17.0.1",
    "mermaid": "^11.12.2",
    "phosphor-svelte": "^3.0.1",
    "sveltekit-superforms": "^2.29.1",
    "tippy.js": "^6.3.7",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "oxlint --config .oxlintrc.json",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html,yaml,yml}": "prettier --write"
  }
}
